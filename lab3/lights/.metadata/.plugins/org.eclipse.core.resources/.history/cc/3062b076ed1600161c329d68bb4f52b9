#include "sys/alt_stdio.h"
#include <stdio.h>
#include <stdlib.h>
#define switches (volatile char *) 0x0003000
#define leds (volatile char *) 0x0003010

int main()
{ 
  alt_putstr("Hello from Nios II!\n");


  char c;
  alt_getchar("%c", &c);

  if (c == 'G') {
	  while (1)
		  *leds = *switches;
  }
  return 0;
}
